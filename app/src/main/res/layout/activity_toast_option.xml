<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toast_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roostersdining.roostersrestaurant.ui.ToastOptionActivity"
    android:background="@color/colorDivider">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/fulllogo"
        android:id="@+id/logoImageView"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:layout_below="@+id/toastHeaderTextView"
        android:layout_marginTop="25dp">

        <Button
            android:text="WHOLE WHEAT"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:id="@+id/toastWW"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="SOURDOUGH"
            android:layout_width="250dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_marginTop="49dp"
            android:id="@+id/toastSD"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_below="@+id/toastWW"
            android:layout_alignLeft="@+id/toastWW"
            android:layout_alignStart="@+id/toastWW" />

        <Button
            android:text="WHITE"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:id="@+id/toastWhite"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:padding="10dp"
            android:layout_alignTop="@+id/toastSD"
            android:layout_toRightOf="@+id/toastSD"
            android:layout_toEndOf="@+id/toastSD" />

        <Button
            android:text="ENGLISH MUFFIN"
            android:layout_width="250dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:id="@+id/toastEnglishMuffin"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/toastWW"
            android:layout_alignLeft="@+id/toastWhite"
            android:layout_alignStart="@+id/toastWhite" />

        <Button
            android:text="BISCUIT"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:padding="10dp"
            android:id="@+id/toastBiscuit"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_below="@+id/toastSD"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp" />
    </RelativeLayout>

    <TextView
        android:text="Choose a toast option: "
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:id="@+id/toastHeaderTextView"
        android:layout_below="@+id/logoImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

