<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_breakfast_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roostersdining.roostersrestaurant.ui.BreakfastItemActivity"
    android:background="@color/colorDivider">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/fulllogo"
        android:id="@+id/logoImageView"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logoImageView"
        android:layout_marginTop="25dp">

        <Button
            android:text="THE BARNYARD"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:id="@+id/theBarnyard"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="SPINACH AND MUSHROOM"
            android:layout_width="250dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_marginTop="49dp"
            android:id="@+id/spinachMushroom"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_below="@+id/theBarnyard"
            android:layout_alignLeft="@+id/theBarnyard"
            android:layout_alignStart="@+id/theBarnyard" />

        <Button
            android:text="MEAT AND CHEESE"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:id="@+id/meatCheese"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:padding="10dp"
            android:layout_alignTop="@+id/spinachMushroom"
            android:layout_toRightOf="@+id/spinachMushroom"
            android:layout_toEndOf="@+id/spinachMushroom" />

        <Button
            android:text="STEAK AND MUSHROOM"
            android:layout_width="250dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:id="@+id/steakMushroom"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/theBarnyard"
            android:layout_alignLeft="@+id/meatCheese"
            android:layout_alignStart="@+id/meatCheese" />

        <Button
            android:text="VERA CRUZ"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:padding="10dp"
            android:id="@+id/veraCruz"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLightPrimary"
            android:layout_height="90dp"
            android:layout_below="@+id/spinachMushroom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp" />
    </RelativeLayout>

</RelativeLayout>
