<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roostersdining.roostersrestaurant.ui.OrderActivity"
    android:background="@color/colorDivider">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/fulllogo"
        android:id="@+id/logoImageView"
        android:layout_height="150dp"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="BREAKFAST"
        android:layout_width="250dp"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:id="@+id/breakfast"
        android:background="@color/colorAccent"
        android:textColor="@color/colorLightPrimary"
        android:layout_height="90dp"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="LUNCH"
        android:layout_width="250dp"
        android:textSize="25dp"
        android:layout_marginTop="67dp"
        android:id="@+id/lunch"
        android:background="@color/colorAccent"
        android:textColor="@color/colorLightPrimary"
        android:layout_height="90dp"
        android:layout_below="@+id/breakfast"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="DINNER"
        android:layout_width="250dp"
        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:id="@+id/dinner"
        android:background="@color/colorAccent"
        android:textColor="@color/colorLightPrimary"
        android:layout_height="90dp"
        android:layout_below="@+id/lunch"
        android:layout_alignLeft="@+id/lunch"
        android:layout_alignStart="@+id/lunch" />

</RelativeLayout>
